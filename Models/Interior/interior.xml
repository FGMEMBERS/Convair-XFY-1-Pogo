<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>tour</object-name>

    <!-- Objets transparents -->
    <object-name>intverriere</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>shader.png</texture>
    <object-name>intverriere</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intverriere</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Convair-XFY-1-Pogo/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -0.988 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  1.080 </z-m>
    </offsets>
  </model>

  <!-- Planche de bord -->
  <model>
    <path>Aircraft/Convair-XFY-1-Pogo/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -1.900 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  1.194 </z-m>
      <roll-deg>     0.000 </roll-deg>
      <pitch-deg>  -10.000 </pitch-deg>
      <heading-deg>  0.000 </heading-deg>
    </offsets>
  </model> -->

  <!-- Canopy -->
  <animation>
    <type>translate</type>
    <object-name>intverriere</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0.00 </ind><dep> 0.00 </dep></entry>
      <entry><ind> 0.05 </ind><dep> 0.10 </dep></entry>
      <entry><ind> 1.00 </ind><dep> 0.10 </dep></entry>
    </interpolation>
    <axis>
      <x> 0.0 </x>
      <y> 0.0 </y>
      <z> 1.0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>intverriere</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0.00 </ind><dep>  0.0 </dep></entry>
      <entry><ind> 0.05 </ind><dep>  0.0 </dep></entry>
      <entry><ind> 1.00 </ind><dep> 20.0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -0.680 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -1.680 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

</PropertyList>

